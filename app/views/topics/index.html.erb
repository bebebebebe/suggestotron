<h1>Listing topics</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
   
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= link_to topic.title, topic %></td>
    <td><%= button_to '+1', votes_path(topic_id: topic.id), method: :post %></td>
    <% if topic.votes.present? %>
    <td><%= button_to '-1', vote_path(id: topic.votes.last.id), method: :delete %></td>
    <% end %>
    <td><%= pluralize(topic.votes.count, "vote") %></td>  
    <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?', 
                                      method: :delete } %></td>
  </tr>
<% end %>
</table>

<br />

